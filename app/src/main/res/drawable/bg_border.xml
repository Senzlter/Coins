<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6A6A6A" /> <!-- border color -->
        </shape>
    </item>

    <item android:top="0.5dp"
